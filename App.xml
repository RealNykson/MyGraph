<Application
    x:Class="MyGraph.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MyGraph"
    StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Styles\Buttons.xaml" />
                <ResourceDictionary Source="Resources\Styles\TextBlock.xaml" />
                <ResourceDictionary Source="Resources\Styles\ScrollBar.xaml" />
                <ResourceDictionary Source="Resources\LayoutSettings.xaml" />
                <ResourceDictionary Source="Resources\Colors\Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
