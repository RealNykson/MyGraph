<UserControl
    x:Class="MyGraph.Views.Menu.Sidebar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:MyGraph.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyGraph.Views.Menu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style
            x:Key="ToggleButtonStyle"
            BasedOn="{StaticResource MenuButton}"
            TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MenuButtonBackgroundHover}" />
                </Trigger>
            </Style.Triggers>
            <Style.Setters>
                <Setter Property="Width" Value="30" />
                <Setter Property="Height" Value="30" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="Background" Value="{DynamicResource MenuBackground}" />
            </Style.Setters>
        </Style>
    </UserControl.Resources>

    <Border
        Background="{DynamicResource MenuBackground}"
        BorderBrush="{DynamicResource MenuBorder}"
        BorderThickness="1,0,0,0">

        <!--  Animation and collapsible behavior  -->
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsSidebarCollapsed}" Value="false">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        AutoReverse="False"
                                        Storyboard.TargetProperty="Width"
                                        From="50"
                                        To="250"
                                        Duration="0:0:0.1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                        <DataTrigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        AutoReverse="False"
                                        Storyboard.TargetProperty="Width"
                                        From="250"
                                        To="50"
                                        Duration="0:0:0.1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.ExitActions>
                    </DataTrigger>
                </Style.Triggers>

                <Setter Property="Width" Value="300" />
            </Style>
        </Border.Style>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Toggle Button at the top  -->
            <Button
                Grid.Row="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{Binding ToggleSidebarCommand}"
                Style="{StaticResource ToggleButtonStyle}">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Path
                        StrokeEndLineCap="Round"
                        StrokeLineJoin="Round"
                        StrokeStartLineCap="Round"
                        StrokeThickness="2">
                        <Path.Style>
                            <Style TargetType="Path">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSidebarCollapsed}" Value="False">
                                        <!--  Expand icon (arrow right)  -->
                                        <Setter Property="Data" Value="M9,5 L16,12 L9,19" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsSidebarCollapsed}" Value="True">
                                        <!--  Collapse icon (arrow left)  -->
                                        <Setter Property="Data" Value="M16,5 L9,12 L16,19" />
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Fill" Value="Transparent" />
                                <Setter Property="Stroke" Value="{DynamicResource MenuButtonForeground}" />
                                <Setter Property="StrokeEndLineCap" Value="Round" />
                                <Setter Property="StrokeLineJoin" Value="Round" />
                                <Setter Property="StrokeStartLineCap" Value="Round" />
                                <Setter Property="StrokeThickness" Value="2" />
                            </Style>
                        </Path.Style>
                    </Path>
                </Grid>
            </Button>

            <!--  Main Content  -->
            <StackPanel Grid.Row="1" Orientation="Vertical">

                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSidebarCollapsed}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <TextBlock
                    Margin="0,20,0,10"
                    FontSize="20"
                    Foreground="{DynamicResource MenuButtonForeground}"
                    Text="SelectedNodes" />
                <ItemsControl ItemsSource="{Binding Canvas.SelectedNodes}">
                    <ItemsControl.ItemTemplate>
                        <ItemContainerTemplate>
                            <TextBlock Foreground="{DynamicResource MenuButtonForeground}" Text="{Binding Name}" />
                        </ItemContainerTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock
                    Margin="0,20,0,10"
                    FontSize="20"
                    Foreground="{DynamicResource MenuButtonForeground}"
                    Text="SelectedNodes" />
                <ItemsControl ItemsSource="{Binding Canvas.SelectedNodesInputs}">
                    <ItemsControl.ItemTemplate>
                        <ItemContainerTemplate>
                            <TextBlock Foreground="{DynamicResource MenuButtonForeground}" Text="{Binding Name}" />
                        </ItemContainerTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock
                    Margin="0,20,0,10"
                    FontSize="20"
                    Foreground="{DynamicResource MenuButtonForeground}"
                    Text="SelectedNodes" />
                <ItemsControl ItemsSource="{Binding Canvas.SelectedNodesOutputs}">
                    <ItemsControl.ItemTemplate>
                        <ItemContainerTemplate>
                            <TextBlock Foreground="{DynamicResource MenuButtonForeground}" Text="{Binding Name}" />
                        </ItemContainerTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>

        </Grid>

    </Border>
</UserControl>
