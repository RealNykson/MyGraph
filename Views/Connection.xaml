<UserControl
    x:Class="MyGraph.Views.Connection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyGraph.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">


    <Grid>
        <!--  Bigger Path for hit detection  -->
        <Path
            x:Name="HitTestPath"
            Data="{Binding ElementName=VisiblePath, Path=Data}"
            Stroke="Transparent"
            StrokeThickness="20">
            <Path.Style>
                <Style TargetType="Path">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Canvas.GhostConnection, TargetNullValue=null}" Value="null">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>

                    </Style.Triggers>
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </Path.Style>
        </Path>

        <!--  Visible connection path  -->
        <Path x:Name="VisiblePath" IsHitTestVisible="False">
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigureCollection>
                            <PathFigure StartPoint="{Binding startPos}">
                                <PathFigure.Segments>
                                    <PathSegmentCollection>
                                        <PolyBezierSegment Points="{Binding CurvePoints}" />
                                    </PathSegmentCollection>
                                </PathFigure.Segments>
                            </PathFigure>
                        </PathFigureCollection>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
            <Path.Style>
                <Style TargetType="Path">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Canvas.EnableConnectionAnimations}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard x:Name="Animation">
                                    <Storyboard RepeatBehavior="Forever" Timeline.DesiredFrameRate="10">
                                        <DoubleAnimation
                                            AutoReverse="False"
                                            FillBehavior="Stop"
                                            IsCumulative="True"
                                            RepeatBehavior="Forever"
                                            Storyboard.TargetProperty="StrokeDashOffset"
                                            From="0"
                                            To="-25"
                                            Duration="0:0:5" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <RemoveStoryboard BeginStoryboardName="Animation" />
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding End.IsSelected}" Value="True">
                            <Setter Property="Stroke" Value="{DynamicResource ConnectionBackgroundSelected}" />
                            <Setter Property="StrokeThickness" Value="6" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Start.IsSelected}" Value="True">
                            <Setter Property="Stroke" Value="{DynamicResource ConnectionBackgroundSelected}" />
                            <Setter Property="StrokeThickness" Value="6" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=HitTestPath, Path=IsMouseOver}" Value="True">
                            <Setter Property="Stroke" Value="{DynamicResource ConnectionBackgroundHover}" />
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Canvas.EnableConnectionAnimations}" Value="False">
                            <Setter Property="StrokeDashOffset" Value="0" />
                        </DataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding AbsoluteStart.X}" Value="0" />
                                <Condition Binding="{Binding AbsoluteStart.Y}" Value="0" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Hidden" />
                        </MultiDataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding AbsoluteEnd.X}" Value="0" />
                                <Condition Binding="{Binding AbsoluteEnd.Y}" Value="0" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Hidden" />
                        </MultiDataTrigger>
                        <DataTrigger Binding="{Binding End, TargetNullValue=null}" Value="null">
                            <Setter Property="StrokeDashArray" Value="4,0" />
                            <Setter Property="Stroke" Value="{DynamicResource ConnectionBackgroundGhost}" />
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                    <Setter Property="Visibility" Value="Visible" />
                    <Setter Property="Panel.ZIndex" Value="1" />
                    <Setter Property="StrokeDashArray" Value="4,1" />
                    <Setter Property="Stroke" Value="{DynamicResource ConnectionBackground}" />
                    <Setter Property="StrokeThickness" Value="4" />
                </Style>
            </Path.Style>
        </Path>

    </Grid>
</UserControl>
