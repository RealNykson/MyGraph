<UserControl
    x:Class="MyGraph.Views.Connection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyGraph.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">


    <Grid>
        <!--  Bigger Path for hit detection  -->
        <Path
            x:Name="HitTestPath"
            Data="{Binding ElementName=VisiblePath, Path=Data}"
            Stroke="Transparent"
            StrokeThickness="20">
            <Path.Style>
                <Style TargetType="Path">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Canvas.GhostConnection, TargetNullValue=null}" Value="null">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>

                    </Style.Triggers>
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </Path.Style>
        </Path>

        <!--  Visible connection path  -->
        <Path
            x:Name="VisiblePath"
            IsHitTestVisible="False"
            StrokeThickness="3">
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigureCollection>
                            <PathFigure StartPoint="{Binding startPos}">
                                <PathFigure.Segments>
                                    <PathSegmentCollection>
                                        <PolyBezierSegment Points="{Binding CurvePoints}" />
                                    </PathSegmentCollection>
                                </PathFigure.Segments>
                            </PathFigure>
                        </PathFigureCollection>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
            <Path.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">

                            <DoubleAnimation
                                AutoReverse="False"
                                FillBehavior="Stop"
                                IsCumulative="True"
                                RepeatBehavior="Forever"
                                Storyboard.TargetProperty="StrokeDashOffset"
                                From="0"
                                To="-15"
                                Duration="0:0:1" />

                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Path.Triggers>
            <Path.Style>
                <Style TargetType="Path">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=HitTestPath, Path=IsMouseOver}" Value="True">
                            <Setter Property="Stroke" Value="{DynamicResource ConnectionBackgroundHover}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding End, TargetNullValue=null}" Value="null">
                            <Setter Property="StrokeDashArray" Value="4,0" />
                            <Setter Property="Stroke" Value="{DynamicResource ConnectionBackgroundGhost}" />
                        </DataTrigger>
                    </Style.Triggers>
                    <Setter Property="StrokeDashArray" Value="4,1" />
                    <Setter Property="Stroke" Value="{DynamicResource ConnectionBackground}" />
                </Style>
            </Path.Style>
        </Path>

    </Grid>
</UserControl>
