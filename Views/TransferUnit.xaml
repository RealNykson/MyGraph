<UserControl
    x:Class="MyGraph.Views.TransferUnit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:MyGraph.Behaviors"
    xmlns:converters="clr-namespace:MyGraph.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyGraph.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:MyGraph.Models"
    xmlns:vm="clr-namespace:MyGraph.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsVisible}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <Grid
        MinWidth="300"
        MinHeight="100"
        behaviors:ActualSizeBehavior.ActualHeight="{Binding Height, Mode=OneWayToSource}"
        behaviors:ActualSizeBehavior.ActualWidth="{Binding Width, Mode=OneWayToSource}"
        behaviors:ActualSizeBehavior.ObserveActualSize="True"
        MouseEnter="MouseEnter"
        MouseLeave="MouseLeave">
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding VisableState}" Value="{x:Static models:VisableState.Faded}">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        FillBehavior="HoldEnd"
                                        Storyboard.TargetProperty="Opacity"
                                        To="0.25"
                                        Duration="0:0:0.1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                        <DataTrigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        FillBehavior="HoldEnd"
                                        Storyboard.TargetProperty="Opacity"
                                        To="1"
                                        Duration="0:0:0.1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.ExitActions>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>


        <Rectangle RadiusX="3" RadiusY="3">
            <Rectangle.Style>
                <Style TargetType="Rectangle">
                    <Style.Triggers>

                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Stroke" Value="{DynamicResource TransferUnitBorderHover}" />
                        </Trigger>



                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                            <Setter Property="Stroke" Value="{DynamicResource TransferUnitBorderSelected}" />
                            <Setter Property="StrokeThickness" Value="2.5" />
                            <Setter Property="StrokeDashArray" Value="5,5" />
                            <Setter Property="Fill" Value="{DynamicResource TransferUnitBackgroundSelected}" />
                        </DataTrigger>

                    </Style.Triggers>
                    <Style.Setters>
                        <Setter Property="Fill" Value="{DynamicResource TransferUnitBackground}" />
                        <Setter Property="Stroke" Value="{DynamicResource TransferUnitBorder}" />
                        <Setter Property="StrokeThickness" Value="1.5" />
                        <Setter Property="StrokeDashArray" Value="10,10" />
                    </Style.Setters>
                </Style>
            </Rectangle.Style>

        </Rectangle>

        <TextBlock
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="20"
            FontWeight="Medium"
            Foreground="{DynamicResource TransferUnitText}"
            Text="{Binding Name}"
            TextAlignment="Center" />
        <Grid Margin="0,0,0,30">
            <ItemsControl
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ItemsSource="{Binding Inputs}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Width="10"
                            Height="10"
                            Margin="0,30,0,0"
                            behaviors:ConnectorPositionBehavior.Connection="{Binding}"
                            behaviors:ConnectorPositionBehavior.Role="Input" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                ItemsSource="{Binding Outputs}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Height="10"
                            Margin="0,30,0,0"
                            behaviors:ConnectorPositionBehavior.Connection="{Binding}"
                            behaviors:ConnectorPositionBehavior.Role="Output" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </Grid>
        <Canvas>
            <ItemsControl
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ItemsSource="{Binding InternConnections}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Path>
                            <Path.Data>
                                <PathGeometry>
                                    <PathGeometry.Figures>
                                        <PathFigureCollection>
                                            <PathFigure StartPoint="{Binding startPos}">
                                                <PathFigure.Segments>
                                                    <PathSegmentCollection>
                                                        <PolyBezierSegment Points="{Binding CurvePoints}" />
                                                    </PathSegmentCollection>
                                                </PathFigure.Segments>
                                            </PathFigure>
                                        </PathFigureCollection>
                                    </PathGeometry.Figures>
                                </PathGeometry>
                            </Path.Data>
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding VisableState}" Value="{x:Static models:VisableState.Faded}">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            FillBehavior="HoldEnd"
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="0.25"
                                                            Duration="0:0:0.1" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            FillBehavior="HoldEnd"
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="1"
                                                            Duration="0:0:0.1" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding DataContext.Canvas.EnableConnectionAnimations, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard x:Name="Animation">
                                                    <Storyboard RepeatBehavior="Forever" Timeline.DesiredFrameRate="10">
                                                        <DoubleAnimation
                                                            AutoReverse="False"
                                                            FillBehavior="Stop"
                                                            IsCumulative="True"
                                                            RepeatBehavior="Forever"
                                                            Storyboard.TargetProperty="StrokeDashOffset"
                                                            From="0"
                                                            To="-25"
                                                            Duration="0:0:5" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <RemoveStoryboard BeginStoryboardName="Animation" />
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Setter Property="Panel.ZIndex" Value="1" />
                                    <Setter Property="StrokeDashArray" Value="4,1" />
                                    <Setter Property="Stroke" Value="{DynamicResource ConnectionBackground}" />
                                    <Setter Property="StrokeThickness" Value="4" />
                                </Style>
                            </Path.Style>
                        </Path>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>
    </Grid>
</UserControl>
