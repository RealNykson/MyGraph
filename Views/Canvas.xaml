<UserControl
    x:Class="MyGraph.Views.Canvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyGraph"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:MyGraph.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid SizeChanged="Grid_SizeChanged">

        <!--  Dotted Graph Background  -->
        <Grid
            IsHitTestVisible="True"
            MouseMove="Canvas_MouseMove">
            <Grid.Background>
                <DrawingBrush 
                    TileMode="Tile" 
                    Viewport="0,0,25,25" 
                    ViewportUnits="Absolute">
                    <DrawingBrush.Drawing>
                        <DrawingGroup>
                            <GeometryDrawing Brush="{DynamicResource GraphBackground}">
                                <GeometryDrawing.Geometry>
                                    <RectangleGeometry Rect="0,0,25,25" />
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                            <GeometryDrawing Brush="{DynamicResource GraphDots}">
                                <GeometryDrawing.Geometry>
                                    <EllipseGeometry Center="12.5,12.5" RadiusX="1" RadiusY="1" />
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                        </DrawingGroup>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Grid.Background>
        </Grid>

        <Canvas
            Background="{DynamicResource CanvasBackground}"
            MouseMove="Canvas_MouseMove"
            RenderTransform="{Binding CanvasTransformMatrix}">

            <!--  Selector  -->
            <Rectangle
                Canvas.Left="{Binding StartSelectRangePosition.X}"
                Canvas.Top="{Binding StartSelectRangePosition.Y}"
                Width="{Binding SelectRangeWidth}"
                Height="{Binding SelectRangeHeight}"
                Fill="{DynamicResource SelectorBackground}"
                Opacity="0.2"
                Stroke="{DynamicResource SelectorBorder}"
                StrokeThickness="2" />

            <!--  Connections  -->
            <ItemsControl ItemsSource="{Binding Connections}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <ItemContainerTemplate>
                        <views:Connection DataContext="{Binding}" />
                    </ItemContainerTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!--  Nodes  -->
            <ItemsControl ItemsSource="{Binding Nodes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Canvas.Left" Value="{Binding Path=Position.X}" />
                        <Setter Property="Canvas.Top" Value="{Binding Path=Position.Y}" />
                        <Setter Property="Canvas.ZIndex" Value="{Binding Path=ZIndex}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <ItemContainerTemplate>
                        <views:Node DataContext="{Binding}" />
                    </ItemContainerTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <views:Connection DataContext="{Binding GhostConnection}" />
        </Canvas>

    </Grid>
</UserControl>
